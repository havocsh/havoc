{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "s3:ListBucket"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::${deployment_name}-workspace",
                "arn:aws:s3:::${deployment_name}-playbooks"
            ]
        },
        {
            "Action": [
                "s3:GetObject"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::${deployment_name}-workspace/*",
                "arn:aws:s3:::${deployment_name}-playbooks/*"
            ]
        },
        {
            "Action": [
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::${deployment_name}-workspace/*"
            ]
        }
    ]
}